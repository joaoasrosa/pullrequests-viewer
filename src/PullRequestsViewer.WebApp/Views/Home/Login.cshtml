@model PullRequestsViewer.WebApp.Models.UserViewModel
<div class="page-header">
    <h1>Login.</h1>
</div>

@if (ViewBag.Error != null)
{
    <div class="alert alert-warning alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <strong>Warning!</strong> @ViewBag.Error
    </div>
}

@using (Html.BeginForm("Login", "Home", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="form-group">
        @Html.DisplayNameFor(x => x.Username)
        @Html.TextBoxFor(x => x.Username, null, new { @class = "form-control", @placeholder = Html.DisplayNameFor(x => x.Username) })
    </div>
    <div class="form-group">
        @Html.DisplayNameFor(x => x.Password)
        @Html.PasswordFor(x => x.Password, new { @class = "form-control", @placeholder = Html.DisplayNameFor(x => x.Password) })
    </div>
    <button type="submit" class="btn btn-primary">Login</button>
}